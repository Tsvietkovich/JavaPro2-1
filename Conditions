1 Task 

public class OneConditionOneDoc { // нахождение минимального и максимального
    public static void main(String[] args) {
        int a = 5;
        int b = (-2);
        if (a < b)
            System.out.println("max = " + b + ", min = " + a);
        else
            System.out.println("max = " + a + ", min = " + b);
    }
}
2 Task

public class TwoConditionOneDoc { // корректный возраст (from 1 to 120)
    public static void main(String[] args) {
        System.out.println("Enter your age: ");
        Scanner in = new Scanner(System.in);
        int age = in.nextInt();
        /*boolean t = true;
        t = (age >= 1 && age <= 120);
        System.out.println(t);
        if (t) return;
        else
            System.out.println();
        // OR
        */boolean result;
        if (age >= 1 && age <= 120) {
            result = true;
            System.out.println(result);
        }
        else {
            result = false;
            System.out.println(result);
        }
    }
}

3 Task
public class ThreeConditionOneDoc { // парсинг строки
    public static void main(String[] args) {
        System.out.println("Enter your age: ");
        String ageString = new Scanner(System.in).nextLine();
        int ageInt = Integer.parseInt(ageString);
        if (ageInt >= 1 && ageInt <= 120)
            System.out.println(ageInt);
        else {
            throw new IllegalArgumentException("age must be in the range [1..120], but actually is " + ageInt);
        }
    }
}

4 Task
public class FourConditionOneDoc { // игрушка по идентификатору
    public static void main(String[] args) {
        int Car = 0, Lego = 1, Doll = 2, Puzzle = 3;
        // String c = "Car", l = "Lego", d = "Doll", p = "Puzzle"; // 1)переприсвоение или...
        System.out.println("Enter identifier of the toy: ");
        int Toy = new Scanner(System.in).nextInt();
        String toy = "The toy is : "; // ... 2) или конкатенация
        if (Toy == Car) {
            toy = toy + "Car";
            System.out.println(toy); // ("The toy is: "+ с) 1)
        }
        else if (Toy == Lego) {
            toy = toy + "Lego";
            System.out.println(toy);
        }
        else if (Toy == Doll) {
            toy = toy + "Doll";
            System.out.println(toy);
        }
        else if  (Toy == Puzzle) {
            toy = toy + "Puzzle";
            System.out.println(toy);
        }
        else
            throw new IllegalArgumentException("identifier of the toy must be in the range [0...3], but actually is " + Toy);
    }
}

5 Task
public class FiveConditionOneDoc { // игрушка по идентификатору (switch)
    public static void main(String[] args) {
        int Car = 0, Lego = 1, Doll = 2, Puzzle = 3;
        System.out.println("Enter name of the toy: ");
        String Toy = new Scanner(System.in).next();
        switch (Toy){
            case ("Car"):
                System.out.println("The identifier of the toy is: "+ Car);
                break;
            case ("Lego"):
                System.out.println("The identifier of the toy is: "+ Lego);
                break;
            case ("Doll"):
                System.out.println("The identifier of the toy is: "+ Doll);
                break;
            case ("Puzzle"):
                System.out.println("The identifier of the toy is: "+ Puzzle);
                break;
            default :
                throw new IllegalArgumentException("name of the toy must be Car || Lego || Doll || Puzzle, but actually is " + Toy);
        }
    }
}
